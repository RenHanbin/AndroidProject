<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3ac9bf"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_return1"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:gravity="center">
            <ImageView
                android:src="@drawable/return1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="10dp"
                />
        </LinearLayout>

        <TextView
            android:text="专业介绍"
            android:textColor="#ffffff"
            android:textSize="@dimen/daohang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_marginTop="15dp"
        >
        <CheckBox
            android:id="@+id/Chinese"
            android:text="语文"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"
            />
        <CheckBox
            android:id="@+id/Math"
            android:text="数学"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
        <CheckBox
            android:id="@+id/English"
            android:text="英语"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
        <CheckBox
            android:id="@+id/History"
            android:text="历史"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        >
        <CheckBox
            android:id="@+id/Geography"
            android:text="地理"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"
            />
        <CheckBox
            android:id="@+id/Politics"
            android:text="政治"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
        <CheckBox
            android:id="@+id/Physics"
            android:text="物理"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
        <CheckBox
            android:id="@+id/Chemistry"
            android:text="化学"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        >
        <CheckBox
            android:id="@+id/Biology"
            android:text="生物"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"
            />
        <CheckBox
            android:id="@+id/Art"
            android:text="艺术"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
        <CheckBox
            android:id="@+id/PE"
            android:text="体育"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
        <CheckBox
            android:id="@+id/ZhiJi"
            android:text="职技"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="#3ac9bf"
            android:textColor="#3ac9bf"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_list_learn"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>

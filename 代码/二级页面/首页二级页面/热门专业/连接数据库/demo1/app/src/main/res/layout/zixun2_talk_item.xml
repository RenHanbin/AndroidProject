<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="270dp"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/zixun2_talk_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/select"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/zixun2_talk_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="学姐跟你说啊，有好多事要跟你说啊"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#330033"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <com.example.celia.demo1.XCRoundImageView
                android:id="@+id/zixun2_talk_writerImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/user"
                android:clickable="true"/>
            <TextView
                android:id="@+id/zixun2_talk_writerName"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="盘尼西林"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


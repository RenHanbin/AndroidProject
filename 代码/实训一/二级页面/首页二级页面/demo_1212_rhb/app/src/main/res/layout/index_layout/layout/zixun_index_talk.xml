<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="245dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/select"
            android:id="@+id/zixun2_talk_img"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/zixun2_talk_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="你说什么我都不知道不知道哦啊不知都不知道"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/zixun2_talk_writerImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/pic2" />

            <TextView
                android:id="@+id/zixun2_talk_writerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="小茗同学"
                android:textSize="12dp" />

            <ImageView
                android:src="@drawable/dianzan"
                android:id="@+id/iv_dianzan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="143"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
